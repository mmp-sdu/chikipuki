#include <stdio.h>
#include <stdlib.h>
// выводит сумму позитивных, негативных и в целом

int main()
{
    int i = 0;
    int a = 0;
    int sumn = 0;
    int sump = 0;
    int res = 0;
    for(int i = 1; i <= 10; i++){
           printf("%d enter integer: \n", i);
           scanf("%d", &a);
           if(a < 0){
            sumn = sumn + a;
           }
           if(a > 0){
            sump = sump + a;
           }
           res = res + a;
    }
    printf("sum positive = %d\n", sump);
    printf("sum negative = %d\n", sumn);
    printf("difference = %d\n", res);
    return 0;
}
